@model Book

@{
    ViewData["Title"] = "❌ Delete ";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="text-center">Are you sure you want to delete this book?</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <h4>@Model.Title</h4>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Price:</strong> @Model.Price €</p>
        </div>
    </div>


    <div class="mt-4 text-center">
        <form asp-controller="Home" asp-action="DeleteBook" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger btn-lg">Yes</button>
        </form>
        
        <form method="post" asp-controller="Home" asp-action="Index" asp-route-id="@Model.Id">
            <button asp-action="Index" class="btn btn-secondary btn-lg">Cancel</button>

        </form>
    </div>
</div>
