@model Book

@{
    ViewData["Title"] = $"📚 {Model.Title}";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="text-center">@Model.Title - @Model.Author</h1>

    <div class="card">
        <div class="card-body">

            <h4 class="card-title">@Model.Title</h4>
            <h6 class="card-subtitle mb-2 text-muted">By @Model.Author</h6>
            <p class="card-text">@Model.Description</p>


            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Publisher:</strong> @Model.Publishing</p>

            
                <div class="mt-3">
                <img onerror="this.onerror=null; this.src='@Url.Content("~/img/placeholder.jpg")';" src="@Model.ImageUrl" class="img-fluid" />
                </div>
            


            <p class="mt-3"><strong>Price:</strong> @Model.Price €</p>

            <p><strong>Created on:</strong> @Model.Created</p>
        </div>
    </div>

    <!-- Навигационные ссылки -->
    <form method="post" class="mt-4 text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
    </form>

    <form method="post" class="mt-4 text-center">
        <a asp-controller="Home" asp-action="DeleteBook" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Delete</a>
    </form>
    <form method="post" class="mt-4 text-center">
        <a asp-controller="Home" asp-action="EditBook" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm">Edit</a>
    </form>
</div>

