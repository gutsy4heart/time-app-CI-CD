@model Book

@{
    ViewData["Title"] = "Edit Book";
    Layout = "_Layout";
}


<div class="container mt-4">
    <h1 class="text-center">Edit Book</h1>

    <div class="card mt-4">
        <div class="card-body">
            <form asp-controller="Home" asp-action="EditBook" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" id="Title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" id="Description" rows="4" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Author" class="form-label">Author</label>
                    <input asp-for="Author" class="form-control" id="Author" required />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Genre" class="form-label">Genre</label>
                    <input asp-for="Genre" class="form-control" id="Genre" required />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Publishing" class="form-label">Publishing</label>
                    <input asp-for="Publishing" class="form-control" id="Publishing" required />
                    <span asp-validation-for="Publishing" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Publishing" class="form-label">Created</label>
                    <input asp-for="Created" class="form-control" id="Created" required />
                    <span asp-validation-for="Created" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" id="Price" type="number" step="0.01" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" id="ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
